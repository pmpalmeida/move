
<style>

.banner {
  color: white;
  text-align: center;
  height: 100%;
  /* if you have a 70px navbar => height: calc(100vh - 70px); */
  background-size: cover !important;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: black
}
.banner h1 {
  font-size: 30px;

}
.mktp {
  font-size: 20px;
  font-weight: lighter;
  color: black;
  margin-top: 12px;
  margin-bottom: 12px;
  text-align: center;
}
</style>




<div class="banner"">
  <div class="banner-content">
  <br>
  <br>
    <%= image_tag("logo2.png", height: 200, width: 300) %>
    <h1 style="padding: 15px">Encontre as melhores MVs perto de voce!</h1>


    <!-- DROPDOWN BEGIN -->
    <div class="btn-group show-on-hover">
      <button type="button" class="btn btn-danger btn-lg btn-round" data-toggle="dropdown">
        <strong>Cidade</strong> <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">

        <% @cities.each do |city| %>
        <li><%= link_to city.name, city_path(city) %></li>
        <% end %>

        <li class="divider"></li>
        <li><%= link_to "Inscreva-se", new_user_registration_path %></li>
      </ul>
    </div>
    <!-- DROP DOWN END-->
  <br>
  <br>
  <br>

